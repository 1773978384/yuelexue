<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_goods_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.v7.widget.LinearLayoutCompat

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/tv_course_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="{fa-arrow-left}"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <android.support.v7.widget.AppCompatTextView
                android:textColor="@android:color/white"
                android:paddingTop="26dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="课程详情"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/tv_course_detail_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_course_detail_share"
                android:gravity="center"
                android:text="{fa-star-o}"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/tv_course_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="{fa-share}"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical"
    >
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_course_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/bg_gray"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="青少年培训班（入门）"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
         <android.support.v7.widget.AppCompatTextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent" 
             android:textSize="15sp"
             android:textColor="@android:color/black"
             android:text="评分:"/>
         <android.support.v7.widget.AppCompatTextView
             android:id="@+id/tv_course_detail_score"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:textSize="15sp"
             android:textColor="@android:color/black"
             android:text="4.9"/>
     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_course_detail_people"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="200"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="人评价"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_Detaile_baoming"
                android:textColor="@android:color/black"
                android:text="报名截止至"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_toRightOf="@+id/course_Detaile_baoming"
                android:id="@+id/course_detail_end_time"
                android:textColor="@android:color/black"
                android:text="2017.8.31"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/zonkeshi"
                android:textColor="@android:color/black"
                android:text="总课时"
                android:layout_toLeftOf="@+id/course_detail_total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_detail_total_time"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:textColor="@android:color/black"
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"
            />
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <com.joanzapata.iconify.widget.IconTextView
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="{fa-location-arrow}"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_address"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:text="上海市徐汇区XX市501"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </android.support.v7.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/transparent"
            />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        >
      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.joanzapata.iconify.widget.IconTextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="{fa-headphones}"
              android:textColor="@color/app_color"
              android:gravity="center"
              android:paddingLeft="5dp"
              />
          <android.support.v7.widget.AppCompatTextView
              android:textColor="@color/we_chat_black"
              android:paddingLeft="10dp"
              android:text="在线预约试听"
              android:layout_width="wrap_content"
              android:layout_height="match_parent" />
      </android.support.v7.widget.LinearLayoutCompat>

<RelativeLayout
    android:id="@+id/course_detail_booktime"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:onClick="onClick"
    >
    <TextView
        android:id="@+id/tv_arrow_text_detail"
        android:text="预约时间"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/tv_course_detail_booktime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/icon_arrow_detail"
        android:gravity="center"
        android:text="时间未设置" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/icon_arrow_detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="{fa-chevron-right}" />

</RelativeLayout>
    </android.support.v7.widget.LinearLayoutCompat>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <android.support.v7.widget.AppCompatTextView
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:id="@+id/tv_time_select"
            android:textSize="15sp"
            android:textColor="@color/app_color"
            android:text="09:30:00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/due_time"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="预约"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_normal_border"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/app_color"
                />
            <android.support.v7.widget.AppCompatTextView
                android:text="-适合对象"
                android:textColor="@color/we_chat_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_suitable_content"
            android:paddingLeft="5dp"
            android:text="8-12岁青少年"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"

        >
        <LinearLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <View
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/app_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程简介"
                android:textSize="16sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_course_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_title"
            android:layout_marginTop="5dp"
            android:text="@string/info"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_mark"
            android:layout_below="@+id/tv_course_detail_info"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:text="全部展开"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@+id/tv_course_detail_info"
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_up"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"

        >
        <LinearLayout
            android:id="@+id/rx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <View
                android:layout_marginLeft="5dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/app_color"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程内容"
                android:textSize="16sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_course_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rx_title"
            android:layout_marginTop="5dp"
            android:text="@string/info"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_mark2"
            android:layout_below="@+id/tv_course_detail_content"
            android:layout_toLeftOf="@+id/iv_arrow2"
            android:text="全部展开"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_below="@+id/tv_course_detail_content"
            android:id="@+id/iv_arrow2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_up"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
           android:layout_marginLeft="5dp"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/app_color"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />
        <TextView
             android:text="教学环境"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!--先暂时用图片代替下  之后还是要用rv的-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:background="@drawable/saber"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:background="@drawable/saber"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:background="@drawable/saber"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_marginLeft="5dp"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/app_color"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />
        <TextView
            android:text="师资力量"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="20dp"
            android:src="@drawable/avator" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="20dp"
            android:src="@drawable/avator" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="20dp"
            android:src="@drawable/avator" />
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.LinearLayoutCompat>